<div class="row mb-5" style="background-color: #f0f0f0;">
  <div class="col-3">
    <img class="img-fluid" src="{{user.image}}" alt="card image" width="286px" height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
  </div>

  <div class="col-3">
    <h3>{{user.name}}</h3>
    <h5>{{user.email}}</h5>  
    {{!-- <h5> 評論數：{{commentCounts}} </h5> --}}
    <div class="d-flex">
      <h5>{{ dataComment.length }} &nbsp </h5> {{!-- &nbsp 是空格 --}}
      <span> 已評論過餐廳 </span>
    </div>
    <div class="d-flex">
      <h5>{{ user.FavoritedRestaurants.length }} &nbsp </h5>
      <span> 收藏的餐廳 </span>
    </div>
    <div class="d-flex">
      <h5>{{ user.Followings.length }} &nbsp </h5>
      <span> followings（追蹤者） </span>
    </div>
    <div class="d-flex">
      <h5>{{ user.Followers.length }} &nbsp </h5>
      <span> followers（追蹤者） </span>
    </div>
    <a href="/users/{{user.id}}/edit">
      <button class="btn btn-primary" type="button">edit</button>
    </a>
  </div>
</div>

<div class="mt-2" style="background-color: #f0f0f0;">
  {{!-- <h5> 評論數：{{commentCounts}} </h5> --}}
  <h5> 評論數：{{ dataComment.length }} </h5>
  <div class="row mt-1">
    {{#each user.Comments}}
      <div class="col-md-1 shadow-sm">
        <a href="/restaurants/{{this.restaurantId}}">
          <img class="card-img-top img-fluid" src="{{this.Restaurant.image}}" alt="card image" width="56px" height="36px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
        </a>
      </div>  
    {{/each}}
  </div>
</div>